@model esercizioS17L3.Models.Shoe

@{
    ViewBag.Title = "Modifica Scarpa";
}

<h2>Modifica Scarpa</h2>

<form asp-controller="Shoe" asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CoverImage">Cover Image</label>
        <input type="file" class="form-control" asp-for="CoverImage" />
        <span asp-validation-for="CoverImage" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="AdditionalImage1">Additional Image 1</label>
        <input type="file" class="form-control" asp-for="AdditionalImage1" />
        <span asp-validation-for="AdditionalImage1" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AdditionalImage2">Additional Image 2</label>
        <input type="file" class="form-control" asp-for="AdditionalImage2" />
        <span asp-validation-for="AdditionalImage2" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="IsAvailable" class="control-label"></label>
        <input type="checkbox" asp-for="IsAvailable" class="form-check-input" />
        <span asp-validation-for="IsAvailable" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IsDeleted" class="control-label"></label>
        <input type="checkbox" asp-for="IsDeleted" class="form-check-input" />
        <span asp-validation-for="IsDeleted" class="text-danger"></span>
    </div>


    <div class="form-group">
        <button type="submit" class="btn btn-primary">Salva Modifiche</button>
    </div>
</form>

<div>
    <a asp-controller="Shoe" asp-action="Details">Torna alla lista</a>
</div>
