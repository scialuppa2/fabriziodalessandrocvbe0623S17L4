@model esercizioS17L3.Models.Shoe

@{
    ViewBag.Title = "Dettagli Scarpa";
}

<h2>@Model.Name</h2>

<div>
    <img src="/uploads/@Model.CoverImage" alt="@Model.Name" class="img-fluid" />
</div>



<div>
    <img src="/uploads/@Model.AdditionalImage1" alt="Immagine aggiuntiva 1" class="img-fluid" />
</div>




<div>
    <img src="/uploads/@Model.AdditionalImage2" alt="Immagine aggiuntiva 2" class="img-fluid" />
</div>


<p><strong>Prezzo:</strong> €@Model.Price</p>
<p><strong>Descrizione:</strong> @Model.Description</p>
<p>
    <strong>Disponibilità in magazzino:</strong>
    @(Model.IsAvailable ? "Si" : "No")
</p>

<div>
    <a href="@Url.Action("Edit", "Shoe", new { id = Model.ID })" class="btn btn-primary">Modifica</a>
</div>


<div>
    @Html.ActionLink("Torna alla lista", "Index")
</div>

